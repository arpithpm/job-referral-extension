{
  "manifest_version": 3,
  "name": "Job Referral Assistant",
  "version": "1.0",
  "description": "Easily refer friends to job opportunities from your employee portal",
  "permissions": [
    "storage",
    "activeTab"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Job Referral Assistant"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}